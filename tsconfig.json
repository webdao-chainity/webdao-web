{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution":"node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/constants/*": ["constants/*"],
      "@/constants": ["constants"],
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/widget/*": ["widget/*"],
      "@/widget": ["widget"],
      "@/hooks/*": ["hooks/*"],
      "@/hooks": ["hooks"],
      "@/themes/*": ["themes/*"],
      "@/themes": ["themes"],
      "@/engine/*": ["engine/*"],
      "@/engine": ["engine"],
      "@/context/*": ["context/*"],
      "@/context": ["context"],
      "@/helpers/*": ["helpers/*"],
      "@/helpers": ["helpers"],
      "@/abi": ["abi"],
      "@/abi/*": ["abi/*"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
